model Product {
  uuid    String @id @default(uuid())
  barcode String @unique
  name    String @unique
  price   Float
  items   Item[]
}

model Item {
  uuid        String  @id @default(uuid())
  product     Product @relation(fields: [productUuid], references: [uuid])
  productUuid String  
  quantity    Int     @default(1)
  sale        Sale    @relation(fields: [saleUuid], references: [uuid])
  saleUuid    String
}

model Sale {
  uuid        String   @id @default(uuid())
  sellerEmail String
  // seller     User     @relation(fields: [sellerUuid], references: [uuid])
  // sellerUuid String
  itemsSold   Item[]
  soldAt      DateTime @default(now())
}
