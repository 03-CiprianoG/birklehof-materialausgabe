// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid  String @id @default(uuid())
  name  String @unique
  email String @unique
  role  String @default("guest")
  sales Sale[]
}

model Student {
  number  Int @id @default(autoincrement())
  firstName String
  secondName String
  lastName  String
  nameAlias String
  grade     String
  @@unique([firstName, secondName, lastName, nameAlias, grade])
}

model Product {
  uuid    String @id @default(uuid())
  barcode String @unique
  name    String @unique
  price   Float
  items   Item[]
}

model Item {
  uuid        String  @id @default(uuid())
  product     Product @relation(fields: [productUuid], references: [uuid])
  productUuid String  
  quantity    Int     @default(1)
  sale        Sale    @relation(fields: [saleUuid], references: [uuid])
  saleUuid    String
  pricePerUnit Float
}

model Sale {
  uuid        String   @id @default(uuid())
  seller      User     @relation(fields: [sellerUuid], references: [uuid])
  sellerUuid  String
  buyerName   String
  itemsSold   Item[]
  soldAt      DateTime @default(now())
  archived    Boolean  @default(false)
  archivedAt  DateTime?
}
